<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#54c778" android:startColor="#4FDA7B" />
            <stroke android:width="1dp" android:color="#54c778" />
            <corners android:radius="5dp" />
            <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp" />

        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/colorAccent" android:startColor="@color/colorAccent" />
            <stroke android:width="1dp" android:color="@color/colorAccent" />
            <corners android:radius="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/colorAccent" android:startColor="@color/colorAccent" />
            <corners android:radius="5dp" />
            <stroke android:width="0.5dp" android:color="@color/colorAccent" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>