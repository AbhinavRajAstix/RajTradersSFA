<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

   <item android:state_pressed="true" >
      <shape>
         <gradient
             android:startColor="#B8CFCE"
             android:endColor="#B8CFCE"
             android:angle="270"

             />
         <stroke
             android:width="1dp"
             android:color="#B8CFCE"
             />
         <corners
             android:radius="1dp" />
         <padding
             android:left="10dp"
             android:top="1dp"
             android:right="10dp"
             android:bottom="8dp" />

      </shape>
   </item>

   <item android:state_focused="true" >
      <shape>
         <gradient
             android:endColor="#B8CFCE"
             android:startColor="#B8CFCE"
             android:angle="270" />
         <stroke
             android:width="1dp"
             android:color="#B8CFCE" />
         <corners
             android:radius="1dp" />
         <padding
             android:left="10dp"
             android:top="1dp"
             android:right="10dp"
             android:bottom="10dp" />
      </shape>
   </item>

   <item>
      <shape>
         <gradient
             android:endColor="#B8CFCE"
             android:startColor="#B8CFCE"
             android:angle="270" />
         <corners android:radius="5dp"/>
         <stroke
             android:width="0.5dp"
             android:color="#B8CFCE"/>
         <padding
             android:left="10dp"
             android:top="1dp"
             android:right="10dp"
             android:bottom="10dp" />
      </shape>
   </item>
</selector>