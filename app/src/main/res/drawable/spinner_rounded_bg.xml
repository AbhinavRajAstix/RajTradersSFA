<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke
                android:width="0.5dp"
                android:color="#8CC100" />

            <corners android:radius="5dp" />
            <padding
                android:bottom="4dp"
                android:left="2dp"
                android:right="2dp"
                android:top="4dp" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/dropdown_8px" />
    </item>
</layer-list>