<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5FE"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:id="@+id/layout_first"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/custom_header_color"
        android:gravity="center_vertical"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:weightSum="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_side_popUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_action" />

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_side_popUp"
                android:layout_marginRight="@dimen/dimen_20dp"

                android:gravity="center_vertical"
                android:id="@+id/ll_nameSection"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txtview_selectstoretext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"


                    android:text="Potential Distributor List"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtview_workingWith"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"


                    android:text=""
                    android:textColor="#ffffff"

                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_Notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="0.1"

                android:layout_toRightOf="@+id/ll_nameSection"
                android:visibility="gone"
                android:src="@drawable/notification_button_image" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout

        android:id="@+id/ll_spinsection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"

        android:orientation="vertical">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/spinner_for_filterDistributor"
            android:visibility="visible"

            android:padding="3dp"
            android:background="@drawable/spinner_distribtr_bckgrnd"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="9">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:id="@+id/ll_StorelstHeading"

            >
            <LinearLayout
                android:id="@+id/relativeLayout121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F5F1EF"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="#F5F1EF">

                    <TextView
                        android:id="@+id/textView1_battstat2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="12dp"
                        android:text=" #"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:visibility="gone"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView1_battstat3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Distributor"
                        android:layout_weight="3.5"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ll_LastVisitDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View/Edit"

                        android:gravity="center"

                        android:textColor="@color/green_submitted"
                        android:textSize="12dp"
                        android:visibility="gone"
                        android:layout_weight="0.6"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="#F5F1EF">

                <TextView
                    android:id="@+id/textView1_battstat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:text=" #"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1_addres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Address"
                    android:layout_weight="3.5"
                    android:textColor="@color/colorAddress"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/ll_deleteIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove"

                    android:gravity="center"

                    android:textColor="@color/red"
                    android:textSize="12dp"
                    android:layout_weight="0.6"
                    />

            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_StorelstHeading"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"

            android:layout_weight="3"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_sections_btns"
        android:layout_below="@+id/relativeLayout1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="1dp"
        android:baselineAligned="true"

        android:visibility="visible"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edit_text_diable_bg_transprent"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible">



            <Button
                android:id="@+id/btn_AddScoutingDistributor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_add_store"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Add Potential Distributor"
                android:textColor="#ffffff"
                android:textSize="12sp"

                android:visibility="visible" />

            <Button
                android:id="@+id/btn_DistributorAppointment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_add_store"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Appoint Distributor"
                android:textColor="#ffffff"
                android:textSize="12sp"

                android:visibility="visible" />

            <Button
                android:id="@+id/btnStartVisitScouting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="View Scouting Distributor"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

    <!-- </ScrollView> -->
