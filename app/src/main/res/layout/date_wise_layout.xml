<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_details"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="@drawable/date_grid_border"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/day_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/spoke_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_layout"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/spoke_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="top"
            android:background="@drawable/spoke_icon" />

        <TextView
            android:id="@+id/actual_spoke_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#2F75B5"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="45dp"
        android:layout_height="1dp"
        android:layout_below="@id/spoke_layout"
        android:background="#2F75B5" />


    <LinearLayout
        android:id="@+id/store_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spoke_layout"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/store_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/store_icon_new" />

        <TextView
            android:id="@+id/actual_store_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="10/15"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>

