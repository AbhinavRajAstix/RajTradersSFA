<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top">

        <RadioButton
            android:id="@+id/rg1distributorRetailerFeedBack"
            style="@style/titleTextStyle"
            android:layout_width="1dp"
            android:layout_height="wrap_content"

            android:visibility="invisible"
            android:gravity="top" />
        <ImageView
            android:id="@+id/img_FeedBackStatus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_RouteHeader"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:srcCompat="@drawable/iconpendingp" />
        <TextView
            android:id="@+id/tv_FeedBackStatus"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_RouteHeader"

            android:text="Pending" />

        <TextView
            android:id="@+id/tv_DistibutorScoutingRetailerName"
            style="@style/titleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_RouteHeader"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/img_FeedBackStatus"
            android:layout_toRightOf="@id/rg1distributorRetailerFeedBack"

            android:text="abhinav" />


        <TextView
            android:id="@+id/tv_DistributorRetilerAddress"
            style="@style/contentTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rg1distributorRetailerFeedBack"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/rg1distributorRetailerFeedBack"
            android:text="NA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_DistributorRetilerAddress"
            android:orientation="horizontal"
            android:layout_marginLeft="1dp"
            android:weightSum="4">



            <TextView
                android:id="@+id/tv_nouse1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_ScoutingColumnText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Scouting For"
                android:textColor="@color/primaryColorDark"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ScoutingFor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:gravity="left"
                android:text="Scouting for Person 1"
                android:textColor="@color/black"
                android:textSize="12dp"
                 />


        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>