<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_inflate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPrdName"
            style="@style/titleTextStyleStoreCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.92"
            android:maxLines="2"
            android:padding="2dp"
            android:text="@string/app_name"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/graycolor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <EditText
                android:id="@+id/et_stckVal"
                style="@style/editTextStyle"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_boundary"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:paddingVertical="8dp"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/graycolor" />

        <Spinner
            android:id="@+id/spinnerUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.255"
            android:background="@drawable/spinner_rounded_bg" />

        <com.astix.rajtraderssfasales.utils.customLabelledSwitch.LabeledSwitch
            android:id="@+id/swPcsToCase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="0.25"
            android:textSize="10sp"
            android:visibility="gone"
            app:colorOff="#B9F41B"
            app:colorOn="@color/colorPrimaryDark"
            app:fontFamily="@font/helvetica_bold"
            app:on="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graycolor" />

</LinearLayout>
