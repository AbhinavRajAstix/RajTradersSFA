<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/ll_optContainer"
   android:background="#ffffff"
	>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:id="@+id/parent_of_image_holder"
        android:background="@drawable/custom_edittext"
        android:layout_height="wrap_content">
        <!--surbhi-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingTop="2dp"

            android:visibility="visible"
            android:layout_height="wrap_content">


            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the 4 digit Retailer Code sent via SMS to Retailer"

                android:layout_marginTop="40dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:gravity="center"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One Time Password"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="30dp"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <EditText android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:id="@+id/et_one"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:imeOptions="actionNext"
                    android:background="@drawable/border_layout"
                    android:inputType="number"
                    android:textColorHint="#ededed"
                    android:maxLength="1"
                    android:hint="1"/>

                <EditText android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/et_two"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="6dp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColorHint="#ededed"

                    android:background="@drawable/border_layout"
                    android:maxLength="1"
                    android:hint="1"/>

                <EditText android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/et_three"
                    android:layout_marginLeft="6dp"
                    android:textColorHint="#ededed"
                    android:textColor="@android:color/black"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:background="@drawable/border_layout"
                    android:inputType="number"
                    android:maxLength="1"
                    android:hint="1"/>

                <EditText android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/et_four"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="6dp"
                    android:textColorHint="#ededed"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:background="@drawable/border_layout"
                    android:maxLength="1"
                    android:hint="1"/>

            </LinearLayout>


            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OTP is only valid for 2 minutes"
                android:id="@+id/tv_temp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:gravity="center"/>


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend Code in"
                    android:id="@+id/resend_tv"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/countdown_tv"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    />


            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend Code"
                android:layout_marginTop="5dp"
                android:enabled="false"
                android:textSize="18sp"
                android:id="@+id/resend_otp_tv"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center"/>

            <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="center"
                android:id="@+id/verify_btn"
                android:text="Verify Retailer Code &amp; Submit "
                android:background="@drawable/button_rounded_layout"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:padding="@dimen/dimen_10dp"/>


        </LinearLayout>
        <ImageView
            android:id="@+id/imgCncl"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/circle_step"
            android:src="@drawable/close"
            />

    </RelativeLayout>

</LinearLayout>
  