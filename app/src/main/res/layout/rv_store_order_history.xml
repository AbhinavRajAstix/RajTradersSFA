<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4">

    <TextView
        android:id="@+id/tvSrNo"
        style="@style/contentTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:padding="5dp"
        android:text="1" />

    <TextView
        android:id="@+id/tvOrderDate"
        style="@style/contentTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:padding="5dp"
        android:text="22-Aug-2021" />

    <TextView
        android:id="@+id/tvOrderQty"
        style="@style/contentTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="30 / \u20b9 500" />

    <TextView
        android:id="@+id/tvOrderVal"
        style="@style/contentTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:padding="5dp"
        android:text="\u20b9 500" />

    <ImageView
        android:id="@+id/ivViewProd"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_margin="3dp"
        android:layout_weight="0.5"
        android:gravity="center"
        app:srcCompat="@drawable/invoice_button_selected" />

</LinearLayout>