<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal"
            android:id="@+id/ll_sec1"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/rg1StoreName"
                style="@style/titleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:gravity="top" />




            <TextView
                android:id="@+id/tv_StoreName"
                style="@style/titleTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:layout_marginTop="3dp"

                android:text="abhinav" />

            <ImageView
                android:id="@+id/img_viewDistributorDetails"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:gravity="top"

                android:text="NA"
                android:visibility="visible"
                android:textColor="#8496BD"
                app:srcCompat="@drawable/edit" />
            <ImageView
                android:id="@+id/img_removedistributor"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_weight="0.2"

                android:layout_toRightOf="@id/tv_StoreAddress"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"

                app:srcCompat="@drawable/delete" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal"

            android:layout_below="@+id/ll_sec1"

            android:weightSum="2">
            <ImageView
                android:id="@+id/img_distribut_appointed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"

                app:srcCompat="@drawable/distributor_appointed"
                android:tint="@color/green_submitted" />
            <TextView
                android:id="@+id/tv_StoreAddress"
                style="@style/contentTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="2dp"

                android:text="NA" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>