
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tblDynRow"
    android:layout_width="match_parent"
    android:layout_margin="0dp"
    android:background="#ffffff"
    android:layout_weight="1"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"

            >
            <RadioButton
                android:id="@+id/rg1StoreName"
                android:textSize="8sp"
                android:layout_width="0dp"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:layout_weight="3"
                android:textColor="#000000"
                android:text=""
                android:layout_height="wrap_content"
                android:visibility="visible"

                />
            <TextView
                android:id="@+id/OrderValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="0.0"
                android:layout_weight="1"
                android:textColor="#6895E4"
                android:textSize="12dp"/>


            <TextView
                android:id="@+id/tv_StoreName"
                android:textSize="8sp"
                android:layout_width="0dp"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:layout_weight="3"
                android:visibility="gone"
                android:text="abhinav"

                android:textColor="#000000"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/check1"
                android:checked="false"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <CheckBox
                android:id="@+id/check2"
                android:checked="false"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/tv_LastVisitDate"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:text="Last Visit Date"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_marginRight="12dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >



            <TextView
                android:id="@+id/tv_StoreAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@string/font_family_regular"
                android:layout_gravity="left"
                android:paddingLeft="@dimen/dimen_10dp"
                android:maxLength="30"

                android:singleLine="false"
                android:text=""
                android:textColor="#e77c1d"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/edit_store"
                android:layout_gravity="center_vertical"
                android:layout_height="28dp"
                android:layout_width="0dp"
                android:layout_margin="3dp"
                android:visibility="visible"
                android:layout_weight="0.5"
                android:src="@drawable/edit"

                />

            <ImageView
                android:id="@+id/show_path"
                android:layout_gravity="center_vertical"
                android:layout_height="28dp"
                android:layout_width="0dp"
                android:layout_margin="3dp"
                android:visibility="visible"
                android:layout_weight="0.5"
                android:src="@drawable/bike_icon"

                />



        </LinearLayout>


    </LinearLayout>

</TableRow>